# build
/home/rich/bin/compressjs.sh "namespace.js config.js db.js common.js pubsub.js circle.js controls.js board.js keeper.js player.js app.js plugin.js"

# post-build
for f in `find ./ -type f -regex './c[0-9]+\.js$'`; do
  rm ./drop/*
  cp $f ./drop/jquery-bds.js
  rm $f
done

cp ./drop/jquery-bds.js ../biz_dev_sim/lib/assets/javascripts/jquery-bds.js
